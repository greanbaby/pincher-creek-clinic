<!DOCTYPE html>
<html>
<head>
    <%- include( 'headerNotes' ); %>
</head>
<body>
    <div>

    <%- include( 'notePageTop' ); %>
    <form method='POST' action='/notes/save'>

        <div>
            <input type='hidden' name='docreate' value='<%=
                display.docreate ? "create" : "update"%>'>
            <!-- Key -->
                    <input type='hidden' name='notekey' value='<%=
                        display.notekey %>'/>

            <!-- Title -->
            <p>Title:
                <input type='text' name='title' value='<%=
                    note ? note.title : "" %>'/>
            </p>

            <!-- Body -->
            <br><textarea rows=5 cols=40 name='body'><%=
                note ? note.body : "" %>
            </textarea>

            <!-- Submit -->
            <br><input type='submit' value='submit'/>
        </div>

    </form>

    </div>

    <%- include( 'footerCommon' ); %>
</body>
</html>
